<%- include ../partials/head.ejs %>
</head>
<body>
  <%- include ../partials/header.ejs %>
  <div class="container mt-5">
    <div class="jumbotron pt-2 pb-2">
      <h1>Explore <%= station.name %></h1>
    </div>
    <% if(station.places.length !== 0 && station.places){ %>
      <h2>Top Places to Visit in <%= station.name %></h2>
      <hr>
      <div class="row d-flex justify-content-center">
        <% station.places.forEach(p => { %>
          <div class="col-md-5 p-4 m-4 bg-light shadow">
              <img src="<%= p.imgSrc %>" alt="<%= p.name %>" class="rounded" style="width: 100%; height: 16rem;">
              <h2><%= p.name %> <span style="font-size: 1rem">@<%= p.station.name %></span></h2>
              <p><%= p.description %></p>
              <a href="<%= p.link %>">Know More!</a>
          </div>
        <% }) %>
      </div>
    <% } %>